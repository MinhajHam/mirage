<h2 class="page-header"><%= product.brand.name %></h2>
<div class="book-details">
    <div class="hover-pinch-zoom-img" style="width: 30vw; height: 70vh">
        <img class="mob book-cover" src="<%= product.coverImagePath %>" />
      </div>

  <div class="book-details-grid">

    <div class="book-details-label">Name:</div>
    <div><%= product.name %></div>
    <div class="book-details-label">Description:</div>
    <div><%= product.description %></div>
    <div class="book-details-label">Category:</div>
    <div><%= product.category %></div>
    <div class="book-details-label">Gender:</div>
    <div><%= product.gender %></div>
    <div class="book-details-label">Discount:</div>
    <div><%= product.discount %></div>
    <div class="book-details-label">Price:</div>
    <div><%= product.price %></div>
    <a class="btn btn-primary" href="/admin/product-control/<%= product.id %>/edit">Edit</a>
    <%- include('deleteForm', { url: `/admin/product-control/${product.id}`, product: product }) %>
  </div>
</div>




