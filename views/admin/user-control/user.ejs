            <h2 class="page-header">Search User</h2>
<form action="/admin/user-control/user" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Name</label>
      <input type="text" name="fname" value="<%= searchOptions.fname %>">
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="bttn bttn-pri" type="submit">Search</button>
  </div>
</form>
<br>
<% users.forEach(user => { %>
  <div class="author-row">
    <div class="author-name"><%= user.fname %></div>
    <div class="author-name"><%= user.status %></div>
    <div class="btn-row">
      <form method="POST" action="/admin/user-control/user/<%= user.id %>/block?_method=PUT">
        <% if(user.status === 'Active') { %>
        <button class="bttn bttn-dan" type="submit">Block</button>
          <% }else{ %>
        <button class="bttn bttn-Info" style="background-color: rgb(139, 8, 8); color: white;" type="submit">Unblock</button>
        <% } %>
      </form>
    </div>
  </div>
<% }) %>

