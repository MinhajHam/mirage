<div class="container">
  <div class="row">
    <% products.forEach(product => { %>
      <div class="col-md-3 mb-4">
        <a href="/men/<%= product.id %>" class="">
          <img class="img-fluid img-with-underline" src="<%= product.coverImagePath1 %>" alt="<%= product.name %>">
        </a>
        <div class="cover-details">
          <div class="cover-brand-label"><%= product.brand.name %></div>
          <div class="cover-name-label"><%= product.name %></div>
          <div class="cover-price-label">$<%= product.price %></div>
        </div>
      </div>
    <% }) %>
  </div>
</div>




<style>

.img-with-underline {
  position: relative;
  transition: border-bottom 0.3s ease;
  border-bottom: solid 2.2px black;

}


.cover-brand-label {
  text-align: center;
  color: black;
  font-size: 1rem;
}

.cover-name-label {
  text-align: center;
  font-size: 0.78rem;
  font-weight: 500;
  color: gray;
}

.cover-price-label {
  text-align: center;
  color: black;
  font-size: .8rem;
  font-weight: 500;
  margin-bottom: 1.5em;
}

</style>