        </div>
  
  
          <div class="col-lg-6">
            <div class="card bg-glass">
              <div class="card-body px-4 py-5 px-md-5">
            <a href="/men" style="width: 10%;" class="back-square btn btn-lg mb-4"><i class="bi bi-arrow-left-circle"></i></a>
                <form action="/login" method="POST">
                  <%- include('_login_fields') %>
                </div>
              </div>
              </div>
              </div>
              </div>
              </div>
  </section>

  <script>

    function copy(that){
    var inp =document.createElement('input');
    document.body.appendChild(inp)
    inp.value =that.textContent
    inp.select();
    document.execCommand('copy',false);
    inp.remove();
    }
    
    </script>

